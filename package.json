{
  "name": "action-logger-sample",
  "version": "0.0.1",
  "description": "MinecraftのActionLoggerを使用したサンプルアドオン",
  "scripts": {
    "build": "tsc -p tsconfig.json && node scripts/build.mjs && node scripts/makeMcaddon.mjs && node scripts/makeZip.mjs",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "compile": "tsc",
    "package": "node scripts/build.js"
  },
  "dependencies": {
    "@minecraft/server": "^2.0.0",
    "@minecraft/server-ui": "^2.0.0",
    "@types/react-native": "^0.73.0",
    "neverthrow": "^8.2.0"
  },
  "devDependencies": {
    "archiver": "^7.0.1",
    "dotenv": "^17.2.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.0.0",
    "zip-a-folder": "^3.1.9"
  },
  "type": "module"
}